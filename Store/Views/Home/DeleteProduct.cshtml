@using Store.Models.Entities
@model List<Product>
@{


    int a = 1;
}



<div style="text-align:center;">
    <h1 >Delete</h1>

  <form asp-action="DeleteProduct"  asp-controller="Home" method="post">
         <input style="width:  200px" name="number" type="number"  placeholder="Enter Number" />
         <input  style="width: 200px" value="remove"  type="submit" />
 </form>


<table class="zigzag" >
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
        @foreach (var product in Model)
        {
                                       <tr>
                                           <td text-align="center">@a</td>
                                           <td text-align="center">@product.Name</td>

                @{
                    a++;
                }
                                       </tr> 
        }
</table>
<input  style="width: 820px" type="button" value="Menu" onclick="location.href='@Url.Action("Menu")'" />

</div>


